<section id="viewUsers" class="bigView">
      <div class="">
        <form class="search-bar" action="#/users" method="post">
           <input type="text" name="searchWord" id="searchWord"/>
           <input type="submit"  class="form-button" value="Search"/>
        </form>
        <table class="table table-striped table-hover table-condensed">
          <thead class="thead-dark">
            <tr>
              <th>Email</th>
              <th>Username</th>
              <th>Active</th>
              <th>Role</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            {{#if isNotMe}}
              <tr id="{{username}}">
                <td>{{email}}</td>
                <td>{{username}}</td>
                <td id="active">{{enabled}}</td>
                <td><a href="#/users/change-role/{{username}}" class="button">{{roles}}</a></td>
                <td>
                  <div class="buttons">
                  {{#if enabled}}
                    <a href="#/users/deactivate/{{username}}" id="deactivate" class="button">Deactivate</a>
                  {{else}}
                    <a href="#/users/activate/{{username}}" id="activate" class="button">Activate</a>
                  {{/if}}
                    <a href="#/users/delete/{{username}}" id="delete" class="button">Delete</a>
                  </div>
                </td>
              </tr>
              {{/if}}
            {{/each}}
          </tbody>
        </table>
      </div>

    <div id="roleChange">
        <form  class="form-horizontal col-sm-12 popuptext" action="#/users/change-role/" id="roleChangeForm" method="post">
            <span class="window-close col-sm-12" onclick="showField('roleChange')"><i class="fa fa-close"></i></span>
            <div class="form-group col-sm-12">
                <div class="form-group col-sm-12">
                    <label for="selectManager" class="control-label col-sm-6">Select role:</label>
                    <div class="col-sm-6">
                        <select class="form-control"  name="role" id="selectRole">
                        </select>
                    </div>
                </div>
            </div>
            <input class="form-button" id="btnSubmit" value="Change role" type="submit" onclick="showField('roleChange')"/>
        </form>
    </div>
</section>
